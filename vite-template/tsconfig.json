{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Assuming no React, but keeping for potential future use or if Phaser uses JSX-like syntax internally for some plugins

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Custom Type Paths */
    "baseUrl": ".",
    "paths": {
      "@box2d/*": ["./types/*"] // Map @box2d/ to ./types/
    },
    "typeRoots": ["./node_modules/@types", "./types"], // Include both standard types and our custom types

    /* Allow JS for PhaserBox2D.js */
    "allowJs": true,
    "checkJs": false // Don't type-check the JS file itself, just allow importing it
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
